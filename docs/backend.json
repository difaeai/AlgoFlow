{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "referralCode": { "type": "string", "description": "The user's unique referral code." },
        "referrerId": { "type": "string", "description": "The UID of the user who referred them." },
        "upline": {
            "type": "array",
            "items": { "type": "string" },
            "description": "An array of UIDs representing the referral upline, up to 5 levels."
        },
        "subscriptionId": { "type": "string" },
        "subscriptionStatus": { "type": "string", "enum": ["active", "inactive", "pending"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "magnusInvestment": { "type": "number", "description": "The investment amount for the Magnus bot." },
        "magnusMonthlyTarget": { "type": "number", "description": "The monthly profit target percentage for the Magnus bot." },
        "magnusAnalysisStartDate": { "type": "string", "format": "date-time", "description": "The date when the 15-day Magnus bot analysis period started." }
      },
      "required": ["uid", "email", "referralCode", "createdAt"]
    },
    "subscription": {
        "title": "Subscription",
        "description": "A user's subscription record.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "planId": { "type": "string" },
            "status": { "type": "string", "enum": ["pending_approval", "active", "rejected"]},
            "paymentProofUrl": { "type": "string", "format": "uri" },
            "paidAmount": { "type": "number" },
            "createdAt": { "type": "string", "format": "date-time" },
            "approvedAt": { "type": "string", "format": "date-time" },
            "approvedBy": { "type": "string" }
        },
        "required": ["userId", "planId", "status", "paidAmount", "createdAt"]
    },
    "commission": {
        "title": "Commission",
        "description": "A referral commission earned by a user.",
        "type": "object",
        "properties": {
            "userId": { "type": "string", "description": "The user who earned the commission." },
            "fromUserId": { "type": "string", "description": "The user whose subscription generated the commission."},
            "subscriptionId": { "type": "string" },
            "amount": { "type": "number" },
            "level": { "type": "number", "description": "The referral level (1-5)." },
            "rate": { "type": "number", "description": "The commission rate (e.g., 0.005 for 0.5%)." },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "fromUserId", "subscriptionId", "amount", "level", "rate", "createdAt"]
    },
    "plan": {
        "title": "Subscription Plan",
        "description": "A subscription plan offered to users.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "price": { "type": "number" },
            "target": { "type": "string" },
            "features": {
                "type": "array",
                "items": { "type": "string" }
            },
            "popular": { "type": "boolean" }
        },
        "required": ["name", "price", "target", "features"]
    }
  },
  "auth": {
      "providers": ["password"]
  },
  "firestore": {
      "/users/{userId}": {
          "schema": { "$ref": "#/entities/user" },
          "description": "User profile documents."
      },
      "/users/{userId}/commissions/{commissionId}": {
          "schema": { "$ref": "#/entities/commission" },
          "description": "Referral commissions earned by a user."
      },
      "/subscriptions/{subscriptionId}": {
          "schema": { "$ref": "#/entities/subscription" },
          "description": "Subscription payment records."
      },
      "/plans/{planId}": {
        "schema": { "$ref": "#/entities/plan" },
        "description": "Subscription plans available to users."
      }
  }
}
