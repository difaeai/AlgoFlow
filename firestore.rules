
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an administrator
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // USER PROFILES
    match /users/{userId} {
      // A user can read their own profile
      // An admin can read any user's profile
      allow read: if request.auth.uid == userId || isAdmin();
      
      // A user can create their own profile during signup
      allow create: if request.auth.uid == userId;

      // A user can update their own profile (for non-critical fields)
      // An admin can update any user's profile (for status changes, etc.)
      allow update: if request.auth.uid == userId || isAdmin();

      // Only Admins can list all users.
      // Regular users cannot list users.
      allow list: if isAdmin();
    }
    
    // SUBSCRIPTIONS
    match /subscriptions/{subscriptionId} {
       // Any authenticated user can create a subscription (submit a payment)
       allow create: if request.auth != null;

       // A user can read their own subscription record IF they know the full path.
       // Admins can read any subscription record.
       allow read: if (request.auth.uid == resource.data.userId) || isAdmin();
       
       // Only admins can update a subscription (approve/reject)
       allow update: if isAdmin();

       // Admins can LIST all documents in the 'subscriptions' collection
       // Regular users can query their own subscriptions.
       allow list: if isAdmin();
    }
    
    // COMMISSIONS
    match /users/{userId}/commissions/{commissionId} {
      // A user can only read and list their own commissions.
      allow read, list: if request.auth.uid == userId;
      
      // Admins can create commission records for any user
      allow create: if isAdmin();
    }

    // PLANS
    match /plans/{planId} {
      // Anyone can read the plans to display them on the pricing page
      allow read, list: if true;
      // Only admins can create, update, or delete plans
      allow write: if isAdmin();
    }
  }
}
