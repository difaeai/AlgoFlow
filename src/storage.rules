
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match the path for payment proofs
    match /proofs/{userId}/{allPaths=**} {
      // Allow read access only to the authenticated user who owns the proof
      // and to administrators. This is a placeholder for admin logic.
      allow read: if request.auth != null && (request.auth.uid == userId || 
                  (exists(/databases/(default)/documents/users/$(request.auth.uid)) && 
                   get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true));
      
      // Allow write access only to the authenticated user creating their own proof folder.
      // Ensure the file is an image and is less than 1MB.
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 1 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
